                <Border BorderBrush="#808080" BorderThickness="4" CornerRadius="2" Padding="2" Margin="5">
                    <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">Настройки RFID</TextBlock>
                </Border>
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="#808080" BorderThickness="2" CornerRadius="3" Padding="4" Margin="5">
                    <Grid RowDefinitions="10,Auto,Auto,Auto,Auto,Auto,Auto,10" ColumnDefinitions="*,130,200,*,130,200,*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DataContext="{Binding RfidAdminSettingsViewModel}">
                        <TextBlock Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">Bus Id</TextBlock>
						<TextBox Grid.Row="1" Grid.Column="2" Margin="5" HorizontalAlignment="Stretch" Watermark="0" Text="{Binding BusId, Mode=TwoWay}"/>
						<TextBlock Grid.Row="2" Grid.Column="1" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">Частота SPI</TextBlock>
						<TextBox Grid.Row="2" Grid.Column="2" Margin="5" HorizontalAlignment="Stretch" Watermark="10_000_000" Text="{Binding ClockFrequencySpi, Mode=TwoWay}"/>
						<TextBlock Grid.Row="3" Grid.Column="1" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">Сменить пароль</TextBlock>
						<TextBox Grid.Row="3" Grid.Column="2" Margin="5" HorizontalAlignment="Stretch" Watermark="-" Text="{Binding BusId, Mode=TwoWay}"/>

						<TextBlock Grid.Row="1" Grid.Column="4" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">Line Id</TextBlock>
						<TextBox Grid.Row="1" Grid.Column="5" Margin="5" HorizontalAlignment="Stretch" Watermark="0" Text="{Binding LineId, Mode=TwoWay}"/>
						<TextBlock Grid.Row="2" Grid.Column="4" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">Сменить пароль</TextBlock>
						<TextBox Grid.Row="2" Grid.Column="5" Margin="5" HorizontalAlignment="Stretch" Watermark="-" Text="{Binding BusId, Mode=TwoWay}"/>
						<TextBlock Grid.Row="3" Grid.Column="4" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">Сменить пароль</TextBlock>
						<TextBox Grid.Row="3" Grid.Column="5" Margin="5" HorizontalAlignment="Stretch" Watermark="-" Text="{Binding BusId, Mode=TwoWay}"/>

						<TextBlock Grid.Row="4" Grid.Column="4" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{Binding ColorInfo}" Text="{Binding Info}"/>
						<Button Grid.Row="4" Grid.Column="5" Margin="5,0,5,0" Content="Сохранить" VerticalAlignment="Center" HorizontalAlignment="Stretch">
							<i:Interaction.Behaviors>
								<ia:EventTriggerBehavior EventName="Click">
									<ia:InvokeCommandAction Command="{Binding SaveClick}"/>
								</ia:EventTriggerBehavior>
							</i:Interaction.Behaviors>
						</Button>
                    </Grid>
                </Border>
                <Border BorderBrush="#808080" BorderThickness="4" CornerRadius="2" Padding="2" Margin="5">
                    <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">Настройки Serial / RS485</TextBlock>
                </Border>
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="#808080" BorderThickness="2" CornerRadius="3" Padding="4" Margin="5">
                    <Grid RowDefinitions="10,Auto,Auto,Auto,Auto,Auto,Auto,10" ColumnDefinitions="*,130,200,*,130,200,*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DataContext="{Binding SerialAdminSettingsViewModel}">
                        
                        <TextBlock Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">Порт</TextBlock>
						<ComboBox Grid.Row="1" Grid.Column="2" Margin="5" HorizontalAlignment="Stretch" Items="{Binding SerialList}" SelectedItem="{Binding SerialSelectedItem}"/>
						<TextBlock Grid.Row="2" Grid.Column="1" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">--</TextBlock>
                        <TextBox Grid.Row="2" Grid.Column="2" Margin="5" Watermark="-" Text="{Binding BusId, Mode=TwoWay}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">--</TextBlock>
                        <TextBox Grid.Row="3" Grid.Column="2" Margin="5" Watermark="-" Text="{Binding BusId, Mode=TwoWay}"/>

						<TextBlock Grid.Row="1" Grid.Column="4" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">BaudRate</TextBlock>
                        <ComboBox Grid.Row="1" Grid.Column="5" Margin="5" HorizontalAlignment="Stretch" Items="{Binding SerialBaudRateList, Mode=TwoWay}" SelectedItem="{Binding SerialBaudRateSelectedItem}"/>
                        <TextBlock Grid.Row="2" Grid.Column="4" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">--</TextBlock>
                        <TextBox Grid.Row="2" Grid.Column="5" Margin="5" Watermark="-" Text="{Binding BusId, Mode=TwoWay}"/>
                        <TextBlock Grid.Row="3" Grid.Column="4" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">--</TextBlock>
                        <TextBox Grid.Row="3" Grid.Column="5" Margin="5" Watermark="-" Text="{Binding BusId, Mode=TwoWay}"/>

						<TextBlock Grid.Row="4" Grid.Column="4" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{Binding ColorInfo}" Text="{Binding Info}"/>
                        <Button Grid.Row="4" Grid.Column="5" Margin="5,0,5,0" Content="Сохранить" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <i:Interaction.Behaviors>
                                <ia:EventTriggerBehavior EventName="Click">
                                    <ia:InvokeCommandAction Command="{Binding SaveClick}"/>
                                </ia:EventTriggerBehavior>
                            </i:Interaction.Behaviors>
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
